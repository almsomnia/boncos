{
   "name": "boncos",
   "description": "A sophisticated bill-splitting and expense calculator built with Nuxt 4.",
   "version": "1.6.1",
   "type": "module",
   "private": true,
   "repository": {
      "type": "git",
      "url": "https://github.com/almsomnia/boncos"
   },
   "author": {
      "name": "Riva Almero",
      "email": "rivaalms@proton.me",
      "url": "https://github.com/almsomnia"
   },
   "scripts": {
      "build": "nuxt build",
      "dev": "nuxt dev",
      "generate": "nuxt generate",
      "preview": "nuxt preview",
      "postinstall": "nuxt prepare",
      "format": "prettier --write .",
      "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'docs: CHANGELOG.md' && pnpm version major && git push && git push --tags",
      "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'docs: CHANGELOG.md' && pnpm version minor && git push && git push --tags",
      "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'docs: CHANGELOG.md' && pnpm version patch && git push && git push --tags",
      "test:unit": "pnpx vitest --project unit",
      "test:nuxt": "pnpx vitest --project nuxt",
      "test": "pnpx vitest"
   },
   "dependencies": {
      "@nuxt/fonts": "0.13.0",
      "@nuxt/ui": "4.4.0",
      "@nuxtjs/seo": "^3.4.0",
      "nuxt": "^4.2.2",
      "tailwindcss": "^4.0.0",
      "typescript": "^5.6.3",
      "vue": "^3.5.27",
      "vue-router": "^4.6.4"
   },
   "devDependencies": {
      "@iconify-json/lucide": "^1.2.94",
      "@nuxt/icon": "^2.2.1",
      "@nuxt/test-utils": "^3.23.0",
      "@nuxtjs/i18n": "^10.2.3",
      "@types/node": "^20.19.1",
      "@vue/test-utils": "^2.4.6",
      "@vueuse/core": "^14.2.1",
      "@vueuse/nuxt": "^14.2.1",
      "generate-changelog": "^1.8.0",
      "happy-dom": "^20.4.0",
      "prettier": "^3.8.1",
      "prettier-plugin-tailwindcss": "^0.7.2",
      "vitest": "^4.0.18"
   },
   "license": "MIT"
}
